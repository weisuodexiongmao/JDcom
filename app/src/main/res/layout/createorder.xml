<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ece5e5">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:id="@+id/relativeLayout"
    android:background="#fff">
    <TextView
        android:id="@+id/createorder_textname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="王春琪"
        android:layout_marginStart="16dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/createorder_textphone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/createorder_textname"
        android:layout_alignBottom="@+id/createorder_textname"
        android:layout_marginStart="19dp"
        android:layout_toEndOf="@+id/createorder_textname"
        android:text="wangfan" />

    <TextView
        android:id="@+id/createorder_dizhi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/createorder_textname"
        android:layout_below="@+id/createorder_textname"
        android:layout_marginTop="13dp"
        android:text="textview" />
</RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="13dp"
        android:background="#fff"
        android:layout_below="@+id/relativeLayout"
        android:layout_alignParentStart="true"
        android:id="@+id/relativeLayout2">

        <com.facebook.drawee.view.SimpleDraweeView
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:id="@+id/createorder_sdv" />

        <TextView
            android:id="@+id/createorder_texttitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="17dp"
            android:text="TextView"
            android:layout_marginTop="12dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/createorder_sdv" />

        <TextView
            android:id="@+id/createorder_textprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="TextView"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/createorder_texttitle" />
        

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/relativeLayout2"
        android:layout_alignParentStart="true"
        android:layout_marginTop="18dp"
        android:background="#fff"
        android:id="@+id/relativeLayout3">

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginTop="13dp"
            android:text="商品金额" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="运费"
            android:layout_marginStart="11dp"
            android:layout_below="@+id/textView11"
            android:layout_alignParentStart="true"
            android:layout_marginTop="22dp" />

        <TextView
            android:id="@+id/createorder_textprice2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/textView11"
            android:text="TextView" />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView13"
            android:layout_alignStart="@+id/createorder_textprice2"
            android:text="0.00" />

        <TextView
            android:id="@+id/textView16"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="立即下单"
            android:textColor="#fff"
            android:gravity="center"
            android:background="#ed0a0a"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:onClick="placeanorder"/>

        <TextView
            android:id="@+id/createorder_textprice3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="18dp"
            android:layout_marginEnd="133dp"
            android:text="实付款 : ¥2500.00" />
    </RelativeLayout>




</RelativeLayout>
