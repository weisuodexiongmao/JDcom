<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/relativeLayout4"
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/orderlist_sdv"
            android:layout_width="100dp"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/orderlist_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="110dp"
            android:layout_marginTop="28dp"
            android:text="TextView" />
    </RelativeLayout>

    <TextView
        android:id="@+id/orderlist_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/relativeLayout4"
        android:layout_marginTop="16dp"
        android:text="共1件商品 需付款：¥52.00" />

    <TextView
        android:id="@+id/orderlist_zhifu"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/orderlist_price"
        android:layout_marginTop="17dp"
        android:background="#ffa600"
        android:gravity="center"
        android:text="去支付"
        android:textColor="#fff"
        android:textSize="18sp" />


</RelativeLayout>
